<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <com.mobile.util.widget.PortraitView
            android:id="@+id/left_portrait"
            android:layout_width="@dimen/portraitSize"
            android:layout_height="@dimen/portraitSize"
            android:layout_gravity="start"
            android:padding="1px"
            android:src="@drawable/portrait"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@color/white_alpha_160"
            android:minHeight="@dimen/portraitSize"
            android:paddingBottom="@dimen/len_8"
            android:paddingStart="@dimen/len_12"
            android:paddingEnd="@dimen/len_8"
            android:paddingTop="@dimen/len_8">

            <net.qiujuer.genius.ui.widget.TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/len_24"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textPrimary"
                android:text="@string/app_name" />

        </FrameLayout>

        <com.mobile.util.widget.PortraitView
            android:id="@+id/left_audio"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:padding="1px"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_play"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <com.mobile.util.widget.PortraitView
            android:id="@+id/right_audio"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:padding="1px"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_play"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/white_alpha_160"
            android:minHeight="@dimen/portraitSize"
            android:paddingBottom="@dimen/len_8"
            android:paddingEnd="@dimen/len_12"
            android:paddingStart="@dimen/len_8"
            android:paddingTop="@dimen/len_8">


            <net.qiujuer.genius.ui.widget.TextView
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/len_24"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textPrimary"
                android:text="@string/app_name" />

        </FrameLayout>


        <com.mobile.util.widget.PortraitView
            android:id="@+id/right_portrait"
            android:layout_width="@dimen/portraitSize"
            android:layout_height="@dimen/portraitSize"
            android:layout_gravity="end"
            android:padding="1px"
            android:src="@drawable/portrait"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

    </LinearLayout>

</LinearLayout>